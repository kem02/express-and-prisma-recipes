// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User{
  id Int @unique @default(autoincrement())
  username String @db.VarChar(255)
  password String
  recipe Recipe[] // Letting prisma know this realtionship is going to exist. We add recipe and it uses the Recipe model and its an array.
}

model Recipe {
  id   Int   @unique @default(autoincrement())
  name   String   @db.VarChar(255)
  description  String
  // userId is placeholder that is a number that mimics the value of id Int inside model User 
  // @unique makes it so that the userId can only be used once
  userId   Int 
  // references: [id] is going to point towards user id in model User
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}